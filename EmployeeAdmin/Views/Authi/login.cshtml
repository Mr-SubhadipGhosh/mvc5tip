@model EmployeeAdmin.Models.appusr
<div class="row col-lg-12 title">
   <h4>Login Here</h4> 
</div>
<div class="row col-lg-12"> </div>
<div class="row ">

    @using (Html.BeginForm("DoLogin", "authi", FormMethod.Post,new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
                @Html.LabelFor(c => c.usrName, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.usrName, new { @class = "form-control" })

            </div>
        </div>
    <div class="form-group">
            @Html.LabelFor(c => c.pass, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(x => x.pass, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <div class="row col-md-2"></div>

        <div class="row col-md-4">
            <input type="submit" class="btn btn-info" name="BtnSubmit" value="Login" />
        </div>
    </div>
    }

</div>
