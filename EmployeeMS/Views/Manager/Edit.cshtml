@model EmployeeModel.Models.Manager

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Manager</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ManagerId)

        <div class="form-group">
            @Html.LabelFor(model => model.ManagerName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ManagerName)
                @Html.ValidationMessageFor(model => model.ManagerName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.deptId, "deptId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("deptId", String.Empty)
                @Html.ValidationMessageFor(model => model.deptId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
